pipeline{
//to ran on any agent
  agent any
  stages{
      stages("build"){
          steps{
          eco 'building the application'
          }
      }
      stages("test"){
          steps{
          eco 'testing the application'
          }
      }
      stages("deploy"){
          steps{
          eco 'deploying the application'
          }
      }
  }
} 

  
